<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:background="#F8F8F8"
        android:columnCount="1"
        android:padding="20dp"
        android:rowCount="8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/soup"
                android:onClick="soupActivity"
                android:paddingTop="10dp"
                android:text="SOUP" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/pizza"
                android:onClick="pizzaActivity"
                android:paddingTop="10dp"
                android:text="PIZZA" />
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/pasta"
                android:onClick="pastaActivity"
                android:paddingTop="10dp"
                android:text="PASTA" />
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/steak"
                android:onClick="steakActivity"
                android:paddingTop="10dp"
                android:text="STEAK" />
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/stew"
                android:onClick="stewActivity"
                android:paddingTop="10dp"
                android:text="STEW" />
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/chicken"
                android:onClick="chickenActivity"
                android:paddingTop="10dp"
                android:text="CHICKEN" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/vegan"
                android:onClick="veganActivity"
                android:paddingTop="10dp"
                android:text="VEGAN" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/dessert"
                android:onClick="dessertActivity"
                android:paddingTop="10dp"
                android:text="DESSERT" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#412B87"
                android:drawableTop="@drawable/drinks"
                android:onClick="drinksActivity"
                android:paddingTop="10dp"
                android:text="DRINKS" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#412B87"
            android:drawableTop="@drawable/food"
            android:text="Other Recipies"
            android:onClick="otherRecipesActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#412B87"
            android:onClick="addRecipeActivity"
            android:text="+ ADD NEW RECIPE" />

    </GridLayout>



</RelativeLayout>